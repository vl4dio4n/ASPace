@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger eroare"></div>
            <div class="logres-form-div">
                <input asp-for="Input.OldPassword" class="logres-form-input" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="logres-form-label"></label>
                <div class="div-span"><span asp-validation-for="Input.OldPassword" class="text-danger eroare"></span></div>
            </div>
            <br/>
            <div class="logres-form-div">
                <input asp-for="Input.NewPassword" class="logres-form-input" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="logres-form-label"></label>
                <div class="div-span"><span asp-validation-for="Input.NewPassword" class="text-danger eroare"></span></div>
            </div>
            <br/>
            <div class="logres-form-div">
                <input asp-for="Input.ConfirmPassword" class="logres-form-input" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="logres-form-label"></label>
                <div class="div-span"><span asp-validation-for="Input.ConfirmPassword" class="text-danger eroare"></span></div>
            </div>
            <br/>
            <button type="submit" class="w-100 btn btn-lg logres-form-button">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
