@model ASPace.Models.Post

@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="card card-blue2">
            <div class="card-body">
                <h3 class="card-title pb-3 border-2 border-bottom" style="border-bottom-color: var(--blue5) !important;">Edit Post!</h3>
                @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts"))
                {
                    <div class="form">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <strong> @Html.Label("Title", "Post Title", new { @class = "form-label" })</strong>
                        <br />
                        @Html.TextBox("Title", Model.Title, new { @class = "form-control" })
                        @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
                        <br />
                        <strong>@Html.Label("Content", "Post Content:", new { @class = "form-label" })</strong>
                        <br />
                        @Html.TextArea("Content", Model.Content, new { @class = "form-control", @rows = 4 })
                        @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                        <br />
                        @Html.HiddenFor(m => m.Date)
                        @Html.HiddenFor(m => m.UserId)
                        @Html.HiddenFor(m => m.PostId)
                        @Html.HiddenFor(m => m.GroupId)

                        <button class="btn btn-sm background-color-cream3" type="submit">Edit Post</button>
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-2"></div>
</div> 